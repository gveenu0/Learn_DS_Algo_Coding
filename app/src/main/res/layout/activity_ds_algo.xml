<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softtechnotech.learndsalgocoding.registerPage"
    android:id="@+id/dl">

    <LinearLayout
        android:id="@+id/ll_ds_algo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_array"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_array" />

                    <TextView
                        android:id="@+id/tv_array"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Array"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_matrix"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_matrix" />

                    <TextView
                        android:id="@+id/tv_matrix"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Matrix"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_string"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_string" />

                    <TextView
                        android:id="@+id/tv_string"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="String"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_searching_sort"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_search_sort" />

                    <TextView
                        android:id="@+id/tv_search_sort"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Search Sort"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_linkedlist"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_linklist" />

                    <TextView
                        android:id="@+id/tv_linkedlist"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Linked List"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_binary_tree"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_binarytree" />

                    <TextView
                        android:id="@+id/tv_binary_tree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Binary Tree"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_binary_search_tree"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_binarysearch" />

                    <TextView
                        android:id="@+id/tv_binary_search_tree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Miscellaneous"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_greedy"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_greedy" />

                    <TextView
                        android:id="@+id/tv_greedy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Greedy Approach"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_back_tracking"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_backtracking" />

                    <TextView
                        android:id="@+id/tv_back_tracking"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Back Tracking"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_stack_Qurues"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_stack" />

                    <TextView
                        android:id="@+id/tv_stack_Qurues"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Stack and Queues"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_heap"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_heap" />

                    <TextView
                        android:id="@+id/tv_heap"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Heap"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_graph"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_graph" />

                    <TextView
                        android:id="@+id/tv_graph"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Graph"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_trie"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_trie" />

                    <TextView
                        android:id="@+id/tv_trie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Trie"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_dynamic" />

                    <TextView
                        android:id="@+id/tv_dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Dynamic Programming"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F3FBFB"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_bit_manipulation"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_bitmanipulation" />

                    <TextView
                        android:id="@+id/tv_bit_manipulation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:background="@color/colorwhite"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Bit Manipulation"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1.8"
            android:background="@color/colorPrimary"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            app:menu="@menu/navigation" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>